# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.cs]
indent_size = 4

[*.csproj]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2

[*.sln]
indent_style = tab
